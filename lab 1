// Example program
#include <iostream>
#include <string>

using namespace std;

int main()
{
	string month[] = {"none", "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"};
	string word[] = { "none", "beautiful", "good", "nice" , " boring", "active", "attractive","passive", "clever", "sporty", "genius", "lovely", "hard-working"};
	bool test = true;
	while (test == true)
	{
cout<<"Which month were you born in?"<<endl;
int input;
        
cin>>input;
if (input <1 || input >12)
{
cout<< "your input is invalid."<<endl;  
test = true;
}
else 
{
cout<< "You were born in " << month[input] <<"." << "You must be "<< word[input]<<"."<< endl;
test = false;
}
}
return 0;
}
